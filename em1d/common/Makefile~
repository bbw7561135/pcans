CANS_LIB_DIR = ..
include $(CANS_LIB_DIR)/Makefile_inc
TARGET = $(CANS_LIB_DIR)/libcans_em1d.a

OBJS = fio.o particle.o field.o boundary.o crct.o

.PHONY : all 
.PHONY : clean
.SUFFIXES :
.SUFFIXES : .o .f90
.f90.o:
	$(FC) $(FFLAGS) -c $< -module $(CANS_MODS_DIR) 

'.update' : $(OBJS)
	ar -r $(TARGET) $(OBJS)
	touch .update

field.o : boundary.o
crct.o : boundary.o

clean :
	rm -f $(OBJS)
